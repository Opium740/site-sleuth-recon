
{
  "manifest_version": 3,
  "name": "Site Sleuth Recon",
  "version": "1.0.0",
  "description": "A Chrome extension for website reconnaissance",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
